{
  "name": "@2players/black-box",
  "version": "0.7.1",
  "description": "Toolbox for Black Engine.",
  "license": "MIT",
  "repository": "2players/black-box",
  "engines": {
    "node": ">=8"
  },
  "scripts": {
    "lint": "eslint 'src/**/*.js' 'test/**/*.js'",
    "doc": "npm run update-index && esdoc",
    "test": "ava",
    "code-quality": "npm run lint && npm run test",
    "cleanup": "rm -rf dist",
    "update-index": "./scripts/update-index.js",
    "transpile": "babel src -d dist",
    "copy-files": "mkdir -p dist && cp -r package.json README.md LICENSE dist/",
    "build": "npm run cleanup && npm run update-index && npm run transpile && npm run copy-files",
    "release": "npm run code-quality && npm run build && cd dist/ && npm publish"
  },
  "files": [
    "**/*"
  ],
  "main": "index.js",
  "keywords": [
    "blacksmith2D",
    "black-engine",
    "black",
    "toolbox"
  ],
  "dependencies": {
    "@2players/black-engine": "https://github.com/2players/black-engine.git#20181121-1",
    "@m31271n/random-number": "^1.0.0",
    "qs": "^6.5.2",
    "vconsole": "^3.2.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.1.5",
    "@babel/core": "^7.1.5",
    "@babel/plugin-proposal-class-properties": "^7.1.0",
    "@babel/plugin-syntax-dynamic-import": "^7.0.0",
    "@babel/preset-env": "^7.1.5",
    "ava": "^0.25.0",
    "babel-eslint": "^10.0.1",
    "esdoc": "^1.1.0",
    "esdoc-ecmascript-proposal-plugin": "^1.0.0",
    "esdoc-standard-plugin": "^1.0.0",
    "eslint": "^5.2.0",
    "eslint-config-prettier": "^3.1.0",
    "eslint-plugin-ava": "^5.0.0",
    "eslint-plugin-node": "^8.0.0",
    "eslint-plugin-prettier": "^3.0.0",
    "husky": "^1.1.3",
    "lint-staged": "^8.0.4",
    "prettier": "^1.11.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "linters": {
      "**/*.{json,md}": [
        "prettier --write",
        "git add"
      ],
      "**/*.js": [
        "prettier --write",
        "eslint",
        "git add"
      ]
    },
    "ignore": [
      "vendor/*.js"
    ]
  }
}
